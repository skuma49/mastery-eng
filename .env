# Environment variables for development
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Database
DATABASE_URL=sqlite:///vocabulary_app.db

# Security
SECRET_KEY=dev-secret-key-change-in-production
WTF_CSRF_SECRET_KEY=dev-csrf-key-change-in-production

# Rate limiting
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO

# Mastery Level Update Configuration
MASTERY_EXCELLENT_THRESHOLD=7
MASTERY_POOR_THRESHOLD=3
MASTERY_EXCELLENT_ACTION=increase
MASTERY_GOOD_ACTION=maintain
MASTERY_POOR_ACTION=decrease

# Score thresholds for mastery level adjustments
# Score > EXCELLENT_THRESHOLD: Increase mastery level by 1
# Score between POOR_THRESHOLD and EXCELLENT_THRESHOLD: No change
# Score < POOR_THRESHOLD: Decrease mastery level by 1

# Other mastery configuration
DEFAULT_MASTERY_THRESHOLD=7
MAX_MASTERY_LEVEL=5

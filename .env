# Environment variables for development
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Database
DATABASE_URL=sqlite:///vocabulary_app.db

# Security
SECRET_KEY=dev-secret-key-change-in-production
WTF_CSRF_SECRET_KEY=dev-csrf-key-change-in-production

# Rate limiting
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO

# Mastery Level Update Configuration (0-10 scale - auto-converted to 0-100)
MASTERY_EXCELLENT_THRESHOLD=8
MASTERY_POOR_THRESHOLD=4
MASTERY_EXCELLENT_ACTION=increase
MASTERY_GOOD_ACTION=maintain
MASTERY_POOR_ACTION=decrease

# Score thresholds for mastery level adjustments
# Score > EXCELLENT_THRESHOLD*10: Increase mastery level by 1 (80/100)
# Score between POOR_THRESHOLD*10 and EXCELLENT_THRESHOLD*10: No change (40-80/100)
# Score < POOR_THRESHOLD*10: Decrease mastery level by 1 (<40/100)

# Other mastery configuration
DEFAULT_MASTERY_THRESHOLD=8
MAX_MASTERY_LEVEL=15

POSTGRES_URL=postgresql://postgres:skm123@localhost:5432/postgres